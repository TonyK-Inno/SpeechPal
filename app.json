{
  "expo": {
    "name": "SpeechPal",
    "slug": "SpeechPal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.silverun.SpeechPal",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for speech recognition."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.silverun.SpeechPal",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "speechpal",
    "extra": {
      "eas": {
        "projectId": "7fd14af9-6574-4284-8ada-09d98d67a5fd"
      }
    },
    "plugins": [
      "expo-speech-recognition",
      "expo-sqlite"
    ],
    "jsEngine": "hermes",
    "experimental": {
      "newArchEnabled": true
    }
  }
}
